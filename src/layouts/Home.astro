---
import { HeaderNav } from "@components/HeaderNav";
import { About } from "@components/About";
import { Contact } from "@components/Contact";
import { Footer } from "@components/Footer";
import { LinkSocial } from "@components/Link";
import { IconGithub, IconLinkedin } from "@components/Icons";
import { BtnPrimary } from "@components/Button";
---

<>
  <HeaderNav client:load />
  <main class="px-6 text-start relative overflow-hidden sm:px-10 md:px-20">
    <div
      class="z-[-2] absolute top-0 w-screen h-screen lg:bg-curveLines bg-no-repeat bg-cover"
    >
    </div>
    <section
      id="home"
      class="min-h-[94vh] max-w-5xl mx-auto pt-10 pb-20 flex flex-col place-content-center"
    >
      <>
        <slot name="home-section" />
        <div class="pt-8 flex gap-10">
          <LinkSocial
            href="https://www.linkedin.com/in/daniel-cordero-melÃ©ndez/"
            ariaLabel="Visit my Linkedin"
            newPage
          >
            <IconLinkedin fill="#fff" classname="w-12" />
          </LinkSocial>
          <LinkSocial
            href="https://github.com/dnlambb"
            ariaLabel="Visit my GitHub"
            newPage
          >
            <IconGithub fill="#fff" classname="w-12" />
          </LinkSocial>
          <BtnPrimary href="#pinProjects" content="Ver Proyectos" />
        </div>
      </>
    </section>
    <section id="pinProjects" class="m-auto max-w-5xl">
      <slot name="works-section" />
    </section>
    <About />
    <Contact />
  </main>
  <Footer />
</>
