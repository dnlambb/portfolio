---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-color-2 text-color-1 font-body scroll-auto">
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Raleway";
    src: url("../public/fonts/Raleway-Bold.woff2"),
      url("../public/fonts/Raleway-Medium.woff2");
  }

  @font-face {
    font-family: "Roboto Mono";
    src: url("../public/fonts/RobotoMono-Regular.woff2"),
      url("../public/fonts/RobotoMono-Medium.woff2"),
      url("../public/fonts/RobotoMono-Light.woff2");
  }

  *::selection {
    color: #ffffff;
    background-color: #f0a500;
  }
</style>
